<%= turbo_stream.replace "flash" do %>
  <%= render "flash" %>
<% end %>

<%= turbo_stream.replace "progress_button_#{@task.id}" do %>
  <%= render "progress_button", task: @task %>
<% end %>

<% if @task.milestone && @task.milestone.is_on_chart == true %>
  <%= turbo_stream.replace "chart_#{@task.milestone.id}" do %>
    <%= render "gantt_chart/chart", milestone:@task.milestone, milestone_widths: @milestone_widths, milestone_lefts: @milestone_lefts, date_range: @date_range %>
  <% end %>
<% end %>
