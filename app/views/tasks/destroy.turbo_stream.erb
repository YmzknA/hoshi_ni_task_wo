  <%= turbo_stream.remove @task %>

  <%= turbo_stream.replace "flash" do %>
    <%= render "flash" %>
  <% end %>

  <%= turbo_stream.replace "tasks_show_modal" do %>
    <%= turbo_frame_tag "tasks_show_modal" %>
  <% end %>


  <% if @task.milestone && @task.milestone.is_on_chart == true %>
    <%= turbo_stream.replace "chart_#{@task.milestone.id}" do %>
      <%= render "gantt_chart/milestone_chart", milestone:@task.milestone, milestone_widths: @milestone_widths, milestone_lefts: @milestone_lefts, date_range: @date_range %>
    <% end %>
  <% end %>
