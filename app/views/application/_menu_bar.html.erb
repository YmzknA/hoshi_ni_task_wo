
<div class="z-100 dock dock-md md:dock-lg bg-base-300">

  <div class="dropdown dropdown-top">
    <button tabindex="0" class="flex flex-col w-full h-full items-center justify-center">
      <span class="material-symbols-outlined">menu</span>
      <span class="dock-label">Menu</span>
    </button>
    <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded z-120 p-5 inline-flex p-2 shadow-xl text-2xl">

      <% if user_signed_in? %>

        <li>
          <%= link_to  destroy_user_session_path, data: { turbo_method: :delete }, class: "whitespace-nowrap text-base-200 flex items-center inline-flex w-full" do %>
            <span class="material-symbols-outlined">
              logout
            </span>
            <p class="whitespace-nowrap"> Log out </p>
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user), class: "whitespace-nowrap text-base-200 flex items-center inline-flex w-full" do %>
            <span class="material-symbols-outlined">
              person
            </span>
            <p class="whitespace-nowrap"> <%= current_user.name %> </p>
          <% end %>
        </li>

      <% else %>

        <li>
          <div class="flex items-center">
            <span class="material-symbols-outlined">
              login
            </span>
            <%= link_to "Log in", new_user_session_path, class: "whitespace-nowrap text-base-200" %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <span class="material-symbols-outlined">
              person_add
            </span>
            <%= link_to "Sign up", new_user_registration_path, class: "whitespace-nowrap text-base-200" %>
          </div>
        </li>

      <% end %>

      <div class="divider"></div>

      <li>
        <div class="flex items-center">
          <%= render 'stars_icon' %>
          <p class="whitespace-nowrap"> 星座一覧 </p>
        </div>
      </li>

      <li>
        <div class="flex items-center">
          <%= render 'tasks_icon' %>
          <p class="whitespace-nowrap"> タスク一覧 </p>
        </div>
      </li>

      <li>
        <div class="flex items-center">
          <span class="material-symbols-outlined">
            stacked_bar_chart
          </span>
          <p class="whitespace-nowrap"> ガントチャート </p>
        </div>
      </li>

      <div class="divider"></div>

      <li><a href="/terms_of_service">利用規約</a></li>
      <li><a href="/privacy_policy" class="whitespace-nowrap">プライバシーポリシー</a></li>
      <li><a href="https://forms.gle/jZMiYRtYCJ6w4ni88">お問い合わせ</a></li>

      <div class="divider"></div>

      <li class="w-full">
        <a href="https://x.com/Ym_sknA_61a" target="_blank" class="w-full">
          <%= image_tag "x-logo.png", class: 'h-6 w-6' %>
        </a>
      </li>
    </ul>
  </div>

  <button class="p-2">
    <span class="material-symbols-outlined">
      stacked_bar_chart
    </span>
    <span class="dock-label">Chart</span>
  </button>

  <button class="p-2">
    <%= render 'tasks_icon' %>
    <span class="dock-label mt-1">Tasks</span>
  </button>

  <button class="p-2">
    <%= render 'stars_icon' %>
    <span class="dock-label">星座</span>
  </button>

  <% if user_signed_in? %>

  <button class="p-2 <%= "dock-active" if current_page?(user_path(current_user)) %>">
    <%= link_to user_path(current_user), class:"w-full flex flex-col items-center" do %>
      <span class="material-symbols-outlined">
        person
      </span>
        <span class="dock-label"><%= current_user.name %></span>
    <% end %>
  </button>

  <% else %>

  <button class="p-2">
    <%= link_to new_user_session_path, class:"w-full flex flex-col items-center" do %>
      <span class="material-symbols-outlined">
        person
      </span>
        <span class="dock-label">Sign in</span>
      <% end %>
  </button>

  <% end %>
</div>
